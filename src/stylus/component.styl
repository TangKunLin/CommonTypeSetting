@import "mixins.styl"
@import "form-reset.styl"

//theme
$color1 = #ff9800
$color2 = #ffbb38
$color3 = #BCBCBC
$color4 = #333333
$color5 = #78b827
$color6 = #ffffff
$color7 = #eeeeee
$color8 = #666666

$g-color1 = #ffcd3d
$g-color2 = #feb23b

//gradient
.L-gra-linear
  background-image: linear-gradient(top left, $g-color1, $g-color2)
.L-radius
  border-radius 4px
  box-shadow 0 0 0 $color5
.L-ellipsis
  overflow: hidden
  text-overflow ellipsis
  white-space nowrap
//container
.container
  width: 100%
  height: 100%
  font-size:16px

//compontent T
  //button
.T-rdu-btn
  background-color: $color1
  padding: 0.2rem 0rem
  width 3rem
  border-radius:1rem
  text-align center
  color: $color6
  //图标按钮
.T-icon-btn
  padding: 0.2rem 0rem
  width 3rem
  display: flex
  align-items center
  justify-content center
  >img
    width 0.4rem
    height 0.4rem
    margin-right 0.1rem
  >span
    font-size 16px
    color: #fff

  //group-btn
.T-group-btn
  width 90%
  display flex
  justify-content center
  background-color #ffffff
  >span
    flex 1
    padding 0.2rem 0rem
    color #666
    text-align center
    +span
      border-left 1px solid #eee

  //圆形头像
.T-circle-head
  width: 2rem
  height: 2rem
  border-radius 100%
  overflow: hidden
  background-color #fff
  padding 0.2rem
  box-sizing border-box
  >img
    width:100%
    height 100%
  //图片组，最多4个
.T-group-head
  display flex
  align-items center
  justify-content center
  flex-flow row wrap
  width 2rem
  height 2rem
  background: #fff
  >img
    width 50%
    height 50%
    border-radius 100%
    background-color #bcbcbc

//name-input
$T_tit = 1rem

.T-txt-inpt
  padding: 0.2rem 0.6rem 0.2rem 0.3rem
  display: flex
  box-sizing: border-box
  justify-content: space-between
  align-items: center
  position: relative
  border-bottom: 0.01rem solid $color7
  background-color: $color6
  .T-tit-i
    font-size: 16px
    font-weight: bold
    width:$T_tit
  .T-inpt
    font-size: 16px
    outline:none
    display: block
    width 6.5rem
    &::-webkit-input-placeholder
      text-align right
  .T-tit-t
    font-size: 16px
    font-weight: bold
    width:$T_tit
.T-txt-img
  padding: 0.2rem 0.6rem 0.2rem 0.3rem
  display: flex
  box-sizing: border-box
  justify-content: flex-start
  align-items: center
  position: relative
  border-bottom: 0.01rem solid $color7
  background-color: $color6
  .T-img
    width 0.6rem
    height 0.6rem
    margin-right 0.2rem
    .T-tit-i
      font-size: 16px
      font-weight: bold
.T-txt-area
  padding: 0.2rem 0.3rem 0.2rem 0.3rem
  display: flex
  box-sizing: border-box
  justify-content: space-between
  align-items: center
  position: relative
  border-bottom: 0.01rem solid $color7
  background-color: $color6
  height 2rem
  .T-tit-t
    font-size: 16px
    font-weight: bold
    width:2rem
    height 100%
    display: flex
    align-items flex-start
    box-sizing border-box
  .T-txtarea
    font-size: 16px
    outline: none
    display: block
    width: 6.5rem
    height 100%

//卡片
.T-cart
  width 100%
  height: 2rem
  padding:0.2rem 0.4rem
  box-sizing border-box
  display: flex
  align-items center
  background: #fff
  position: relative
  .T-c-i
    height: 1.2rem
    width: 1.2rem
    border-radius 100%
    overflow: hidden
    >img
      width 100%
      height 100%
  .T-c-des
    width 4rem
    height 1.2rem
    margin-left 0.3rem
    display: flex
    justify-content space-around
    flex-flow column
    .T-c-n
      width:100%
      font-size:18px
      font-weight:bold
      color:#333
    .T-c-d
      font-size:14px
      color:#999
  .T-c-img
    width: 1rem
    height: 1rem
    padding 0.1rem
    box-sizing border-box
    position: absolute
    right: 0.5rem
    top:0
    bottom:0
    margin:auto 0
    >img
      width:100%
      height:100%

.T-d-ti
  width 90%
  display: flex
  justify-content: space-around
  align-items center
  flex-flow row wrap
  font-size:16px
  color:#595959
  background-color #ffffff
  padding: 0 0 0.3rem
  .T-d-item
    flex: 1
    min-width: 20%
    display: flex
    flex-flow column
    align-items center
    margin-top:0.3rem
    .T-d-i
      color: #ff9800
      font-size 30px
      margin-bottom 0.1rem

//search
.T-search-inpt
  display: flex
  width: 6rem
  box-sizing border-box
  padding:0.2rem 0.3rem
  background-color #fff
  border-radius 0.1rem
  .T-s-i
    width: 0.5rem
    height: 0.5rem
    margin-right:0.2rem
    flex-shrink: 0;
    >img
      width:100%
      height:100%
  .T-submit
    flex 1
    color: $color5
    text-align right
    flex-shrink: 0;
  .T-s-inpt
    outline none
    flex 3
    text-align left
    &::-webkit-input-placeholder
      text-align left
      color: #666

// 模态框
.T-modal
  width: 5rem
  display: flex
  flex-flow column
  padding: 0.2rem 0rem 0
  background: #fff
  border-radius 5px
  overflow: hidden
  box-shadow 0 0 0 rgba(0,0,0,0.2)
  .T-m-c
    font-size: 16px
    color: #333
    text-align center
    box-sizing border-box
    padding: 0 0.2rem 0.2rem
    height: 2rem
    display: flex
    justify-content center
    align-items center
  .T-m-b
    width 100%
    display: flex
    border-top 1px solid #f2f2f2
    >div
      width:50%
      padding 0.2rem 0
      text-align center
      +div
        border-left 1px solid #f2f2f2

//effect K
.K-arrow
  width: 0.15rem
  height: 0.15rem
  border-top:0.02rem solid $color3;
  border-right:0.02rem solid $color3;
  position:absolute;
  right: 0.3rem
  top: 0;
  bottom: 0;
  margin: auto 0;

.K-arrow-r
  transform: rotate(45deg);
.K-arrow-b
  transform: rotate(135deg);